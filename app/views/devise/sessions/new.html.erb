<body class="min-h-screen bg-gradient-to-br from-blue-500 via-purple-500 to-pink-500 flex items-center justify-center p-4">

  <div class="w-full max-w-md bg-white/90 rounded-2xl shadow-xl px-8 py-10 backdrop-blur-sm">

    <div class="flex justify-center" >
      <%= image_tag "newspaper.png", alt: "App Logo", class: "h-12 w-auto" %>
    </div>

    <h2 class="text-4xl font-bold text-center text-gray-800 mb-6">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-sm text-gray-600" %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.submit "Log in", class: "w-full py-2 bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-pink-500 hover:to-yellow-500 text-white font-semibold rounded-full shadow-md transition duration-300" %>
      </div>

    <% end %>

    <div class="text-center text-sm text-gray-600 space-x-4 mt-4">
      <%unless  request.path.start_with?('/admin') || request.path.start_with?('/admins') %>
        <%= link_to "Sign up", new_registration_path(resource_name) %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      <% end %>
    </div>

  </div>

</body>
