
<body class="min-h-screen bg-gradient-to-br from-blue-500 via-purple-500 to-pink-500 flex items-center justify-center p-4">

  <div class="w-full max-w-md bg-white/90 rounded-2xl shadow-xl px-8 py-10 backdrop-blur-sm">

    <div class="flex justify-center" >
      <%= image_tag "newspaper.png", alt: "App Logo", class: "h-12 w-auto" %>
    </div>

    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400" %>
      </div>

      <div class="mb-6">
        <%= f.submit "Send me reset password instructions", class: "w-full py-2 bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-pink-500 hover:to-yellow-500 text-white font-semibold rounded-full shadow-md transition duration-300" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-600 mt-4">
      <%= render "devise/shared/links" %>
    </div>

  </div>

</body>
